<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeChudeTheloai"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtChudeTitle"
            android:text="CHỦ ĐỀ VÀ THỂ LOẠI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtXemThem"
            android:layout_alignParentRight="true"
            android:textColor="#913677"
            android:textSize="18sp"
            android:text="Xem Thêm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalSV"
        android:scrollbars="none"
        android:layout_below="@id/relativeChudeTheloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></HorizontalScrollView>

</RelativeLayout>