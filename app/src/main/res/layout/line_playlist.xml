<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgBackgroundPlaylist"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <ImageView
        android:id="@+id/imgPlaylist"
        android:layout_alignBottom="@id/imgBackgroundPlaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txtLvTitlePlaylist"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#ffff"
        android:maxLines="1"
        android:text="Nhung Bai Hat Hay"
        android:layout_alignBottom="@id/imgPlaylist"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/imgPlaylist"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>