        android:gravity="center"
        android:textColor="@android:color/black"/>

    <ListView
        android:id="@+id/lvPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitlePlaylist">
        
    </ListView>
    
    <TextView
